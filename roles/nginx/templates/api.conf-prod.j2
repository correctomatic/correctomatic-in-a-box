# This file has the changes made by Let's Encrypt Certbot to the original configuration file
# Please update it when you change the production file

server {
    server_name {{ correctomatic.api.domain }};

    # Maximum file upload size
    client_max_body_size {{ correctomatic.api.max_upload_size }};

    location / {
        proxy_pass http://localhost:{{ correctomatic.api.internal_port }};
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/{{ correctomatic.api.domain }}/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/{{ correctomatic.api.domain }}/privkey.pem; # managed by Certbot
}

server {
    if ($host = {{ correctomatic.app.domain }}) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    listen 80;
    server_name {{ correctomatic.app.domain }};
    return 404; # managed by Certbot
}
